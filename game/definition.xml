<?xml version="1.0" encoding="utf-8"?>
<game 	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
id="bb784fc6-fe21-4603-90d7-82c049908a74"
version="1.0.4.7" octgnVersion="3.4.362.0"
scriptVersion="3.1.0.2"
name="Death Battles CCG"
tags="Death Battles, Multiverse"
description="Death Battles Card Game is now Beta 1.0! Check it out here!"
setsurl="http://octgngames.com/dmocg/images/"
gameurl="https://deathbattlesccg.forumfree.it/"
authors="Vegetto1624"
markersize="18" iconurl="https://www.dafont.com/forum/attach/orig/7/9/793610.png?1" >

	<scripts>
		<script src="scripts/actions.py" />
	</scripts>

	<events>
		<event name="OnGameStart" action="resetGame" />
		<event name="OnMoveCards" action="moveCards" />
 		<event name="OnTurnPassed" action="gainPE" />
 		<event name="OnTurnPassed" action="on_turn_passed" />
	</events>

	<markers>
    		<marker id="dishonored" src="Markers/dishonored.png" name="Dishonored"/>
   		<marker id="fate" src="Markers/fate.png" name="Fate"/>
    		<marker id="honored" src="Markers/honored.png" name="Honored"/>
    		<marker id="military" src="Markers/military.png" name="Military"/>
    		<marker id="political" src="Markers/political.png" name="Political"/>
	</markers>
	
	<proxygen definitionsrc="proxy/CardGenData.xml">
	</proxygen>

	<documents>
		<document name="Banlist" icon="documents/rules.png" src="documents/banlist.txt" />
	</documents>

	<globalvariables>
    	<globalvariable name="format" value="OCG" /> 
	</globalvariables>

	<card back="cards/back.jpg" front="cards/front.jpg" width="63" height="88" cornerRadius="0">
		<property name="Character" type="String" textKind="Enum" ignoreText="False" hidden="True" />
		<property name="Cost" type="Integer" hidden="False" />
		<property name="Type" type="String" textKind="Enum" ignoreText="False" />
		<property name="Rarity" type="String" textKind="Enum" ignoreText="False" />
		<property name="Power" type="String" textKind="Enum" ignoreText="False" hidden="True" />
		<property name="Number" type="String" ignoreText="False" />
		<size name="Card" back="cards/back.jpg" front="cards/front.jpg" width="63" height="88" cornerRadius="0" backWidth="630" backHeight="880" backCornerRadius="0" />
	</card>

	<table name="Battle Zone" visibility="undefined" ordered="False" width="800" height="600" background="background/background.jpg" backgroundStyle="uniformToFill">
		<groupaction menu="Untap All" shortcut="F1" execute="untapAll" />
		<groupaction menu="Roll Die" shortcut="ctrl+R" execute="rollDie" />
		<groupaction menu="Set Up Battlezone" execute="setup" />
		<groupaction menu="End Turn" shortcut="ctrl+E" execute="endTurn" />
		<groupaction menu="Calculate number" execute="calculate_damage" />
		<groupaction menu="Calculate percentage" execute="calculate_percent" />
		<cardaction menu="Play Card" execute="toPlay" />
		<cardaction menu="Flip" execute="flipCard" />
		<cardaction menu="Destroy Card" shortcut="del" execute="banish" />
    		<cardaction menu="Add token" execute="addToken" shortcut="CTRL+M"/>
    		<cardaction menu="Remove token" execute="remove_token" shortcut="ALT+M"/>
		<cardaction menu="Move to Hand" shortcut="ctrl+B" execute="toHand" />
		<cardaction menu="Clear Targets/Arrows" shortcut="esc" execute="clear" />
		<cardaction menu="Ability Cooldown" execute="cooldownA" />
		<cardaction menu="Effect Cooldown" execute="cooldownE" />
	</table>

		<gameboards name="newboard" src="background/gameboard.jpg" x="-500" y="-250" width="990" height="660"/>

	<player summary="PE{#PE}|H{#Hand}">
		<globalvariable name="shieldCount" value="0" />
		<globalvariable name="evolution" value="{}" />
		
		<counter name="PE" icon="groups/puntievocazione.png" default="5" />

		<hand name="Hand" visibility="me" ordered="False" width="63" height="88" shortcut="ctrl+H" icon="groups/hand.png">
			<cardaction menu="Play Card" default="True" execute="toPlay" />		
			<cardaction menu="Discard Card" shortcut="del" execute="toDiscard" />
			<groupaction menu="Random Discard" shortcut="ctrl+X" execute="randomDiscard" />
		</hand>

		<group name="Deck" visibility="none" ordered="False" width="63" height="88" shortcut="ctrl+Y" icon="groups/deck.png" viewState="pile">
			<groupaction menu="Draw Card" shortcut="ctrl+D" execute="draw" />
			<groupaction menu="Draw X Cards" shortcut="ctrl+shift+D" execute="drawX" />
			<groupaction menu="Shuffle" shortcut="ctrl+S" execute="shuffle" />
			<groupaction menu="Discard Top Card" execute="mill" />
			<groupaction menu="Discard Top X Cards" execute="millX" />
		</group>

		<group name="Graveyard" visibility="all" ordered="False" width="63" height="88" shortcut="del" icon="groups/graveyard.png" viewState="collapsed" />

	</player>

	<deck>
		<section name="Principale" group="Deck" />
	</deck>
</game>
